<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <%- include('./partials/nav'); %>
        <div class="container page-body">
            <div class="row">
                <% if(answers.length){ answers.forEach(answer=> { %>
                    <div class=" col-sm-6 col-md-4 col-lg-3 mt-4">
                        <a href="/uploadFileAgain/<%= answer._id%>" class="nostyle ">
                            <div class="card grow">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold color-blue">
                                        <%= answer.class %>
                                    </h5>
                                    <p class="card-text">
                                        Test : <%= answer.test_name %><br>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) } else{%>
                        <h3 class="text-muted my-5">You have no open tests</h3>
                        <% } %>
            </div>
        </div>
        <%- include('./partials/foot'); %>


</body>

</html>